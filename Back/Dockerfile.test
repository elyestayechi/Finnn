FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
# Install numpy FIRST with version pinning
RUN pip install --no-cache-dir "numpy<2.0.0" && \
    pip install --no-cache-dir -r requirements.txt

# Install test dependencies
RUN pip install pytest pytest-asyncio pytest-cov responses freezegun

# Copy application code
COPY . .

# Create necessary directories for test results
RUN mkdir -p /app/test-results /app/coverage

# Set Python path
ENV PYTHONPATH=/app
ENV OLLAMA_HOST=http://dummy:11434  

# Default command to run tests
CMD ["python", "-m", "pytest", "tests/", "-v", \
     "--junitxml=/app/test-results/test-results.xml", \
     "--cov=src", \
     "--cov-report=xml:/app/coverage/coverage.xml"]